import subprocess
import os


def main(terminal_number=""):
    dir_path = os.path.abspath(os.path.join(os.path.dirname(__file__), '..'))
    term_file = dir_path + "/linux_story/Terminals.py" + terminal_number
    term_cmd = "gnome-terminal -e 'bash -c \" python " + term_file + "; exec bash\"'"
    subprocess.Popen(term_cmd, shell=True)


if __name__ == "__main__":
    import sys
    if len(sys.argv) == 2:
        main(" " + str(sys.argv[1]))
    else:
        main()
